
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <% @overtime_users.each do |user| %>
              <h3 class="modal-title center">【<%= user.name %>からの残業申請】</h3>
              <% @overtime_info.each do |info| %>  
                <thead>
                  <tr>
                    <td>日付</td>
                    <td>曜日</td>
                    <td>終了予定時間</td>
                    <td>指定勤務終了時間</td>
                    <td>時間外時間</td>
                    <td>業務処理内容</td>
                    <td>指示者確認㊞</td>
                    <td>変更</td>
                    <td>勤怠を確認する</td>  
                  </tr>
                </thead> 
                <tbody>
                  <tr>
                    <td></td>
                    <td></td>
                    <td><%= l(info.overtime_at, format: :time) %></td>
                    <td><%= l(user.designated_work_end_time, format: :time) %></td>
                    <td><%= over_times(user.designated_work_end_time, info.overtime_at) %></td>
                    <td><%= info.work_content %></td>
                    <td></td>
                    <td></td>
                    <td><%= link_to "確認", "#", class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              <% end %>
            <% end %>  
            </table>
          </div>  
        </div>
    </div>  
  </div>
