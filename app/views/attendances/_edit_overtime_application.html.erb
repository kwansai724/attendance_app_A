<%= form_with(model: @user, url: attendances_update_overtime_application_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h3 class="modal-title center">【残業申請】</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <td>日付</td>
                  <td>曜日</td>
                  <td>終了予定時間</td>
                  <td>翌日</td>
                  <td>業務処理内容</td>
                  <td>指示者確認㊞</td>
                </tr>
              </thead> 
              <tbody>
                  <%= f.fields_for @attendance do |attendance| %>
                    <tr>
                      <td><%= l(@attendance.worked_on, format: :short) %></td>
                      <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                      <td></td>
                      <td></td>
                      <td><%= attendance.text_field :note, class: "form-control" %></td>
                      <td></td>
                    </tr>
                  <% end %>
              </tbody>
            </table>
            <%= f.submit "変更を送信する", class: "btn btn-block btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
