<%= form_with(model: @user, url: attendances_update_overtime_approval_user_path(date: @first_day), local: true, method: :patch) do |f| %>  
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h3 class="modal-title center">【<%= @user.name %>からの残業申請】</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <td>日付</td>
                  <td>曜日</td>
                  <td>終了予定時間</td>
                  <td>指定勤務終了時間</td>
                  <td>時間外時間</td>
                  <td>業務処理内容</td>
                  <td>支持者確認㊞</td>
                  <td>変更</td>
                  <td>勤怠を確認する</td>  
                </tr>
              </thead> 
              <tbody>
                  <%= f.fields_for @attendance do |attendance| %>
                    <tr>
                      <td><%= l(@attendance.worked_on, format: :short) %></td>
                      <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td>
                        <%= attendance.select :superior_confirmation, {'なし':1, '申請中':2, '承認':3, '否認':4}, { include_blank: ''},
                                              { class: 'form-control' , required: true } %>
                      </td>
                      <td><%= attendance.check_box :next_day, {}, "true", "false" %></td>
                      <td><%= link_to "確認", "#", class: "btn btn-primary" %></td>
                    </tr>
                  <% end %>
              </tbody>
            </table>
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
          </div>
        </div>  
      </div>
    </div>
  </div>
<% end %>          